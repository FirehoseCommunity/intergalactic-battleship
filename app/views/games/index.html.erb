
<h1 class= "text-center"> Join A Game! </h1>
<br />
<div class= "col-xs-12">
  <% @games.each do |game| %>
    <% if game.jedi_user_id != nil %>
      <div class="booyah-box col-xs-10 col-xs-offset-1 text-center">
        <div class="col-sm-4" >
          <h4 id='j-email'><%= current_user.email %></h4>
          <h4 class="name">as Jedi</h4>
        </div>
        <div class="col-sm-4" >
          <%= image_tag 'Jedi.png', class: 'img-responsive usr-img' %>
        </div>
        <div class="col-sm-4" >  
          <%= link_to 'Join Game as Sith', "#", class: 'btn btn-primary sith-btn', method: :post%>
        </div>
      </div>
    <% else %>
      <div class="booyah-box col-xs-10 col-xs-offset-1 text-center">
        <div class="col-sm-4" > 
          <h4 id='s-email'><%= current_user.email %></h4>
          <h4 class="name"> as Sith</h4>
        </div>
        <div class="col-sm-4" >   
          <%= image_tag 'Sith.png', class: 'img-responsive usr-img' %>
        </div>
        <div class="col-sm-4" > 
          <%= link_to 'Join Game as Jedi', "#", class: 'btn btn-primary jedi-btn', method: :post%>
        </div>
      </div>
    <% end %>   
  <% end %> 
</div>