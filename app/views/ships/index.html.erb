<h1 class="text-center"> Place Your Ships! </h1>
<p class="text-center" id="inst">Click and drag the ships to the grid. <br/>
   Click on ship to position it horizontally or vertically.</p>

<% @ships.each do |s| %>
  <h2><%= s.name %></h2>
  <%= image_tag "ship#{s.length}.png" %>
  <p>ship<%= s.length %>.png</p> 
  <p><%= s.x_coordinate %> <%= s.y_coordinate %></p>
  
<% end %>

<div class="col-sm-10 table-responsive text-center">

  <table id="table-grid">
    <tbody id="grid">
      <% (0..10).each do |row| %>
        <tr class="<%= row %>">
        <% if row > 0 %>
         <td class="col-xs-1 battleship-grid"><%= row %></td>
        <% else %>
          <td class="col-xs-1 battleship-grid"></td>
        <% end %>
        <% ('A'..'J').each do |col| %>
          <% if row == 0 %>
            <td class="col-xs-1 battleship-grid"><%= col %></td>  
          <% else %>  
            <td class="col-xs-1 battleship-grid" data-xCoord="<%= col %>" data-yCoord="<%= row %>">
              <% @ships.each do |s| %>
                <% if s.x_coordinate == col && s.y_coordinate == row %>
                  <h4>O</h4>
                <% end %>  
              <% end %>
            </td> 
          <% end %>   
        <% end %>  
        </tr>
      <% end %> 
        
    </tbody>
  </table>

</div>

<div>
<%= link_to 'Play Game!', '#', class: 'btn btn-danger play-btn', method: :put%>
</div>