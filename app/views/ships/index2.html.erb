
<h1 class="text-center"> Place your Sith ships! </h1>
<p class="text-center" id="inst">Click and drag the ships to the grid. <br/>
   Click on ship to position it horizontally or vertically.</p>

<div class="col-sm-6">

  <table id="ship-table">
    <tbody>
      <tr>
        <td class="ship-name">TIE Interceptor</td>
        <td><%= image_tag 'ship-1.png', class: 'img-responsive ship-img moveable' %></td>
      </tr>
      <tr>
        <td class="ship-name">Royal Interceptor</td>
        <td><%= image_tag 'ship-2.png', class: 'img-responsive ship-img moveable' %></td>
      </tr>
      <tr>
        <td class="ship-name">Imperial Destroyer</td>
        <td><%= image_tag 'ship-2.png', class: 'img-responsive ship-img moveable' %></td>
      </tr>
      <tr>
        <td class="ship-name">T-4 Shuttle</td>
        <td><%= image_tag 'ship-3.png', class: 'img-responsive ship-img moveable' %></td>
      </tr>
      <tr>
        <td class="ship-name">Death Star</td>
        <td><%= image_tag 'ship-5.png', class: 'img-responsive ship-img moveable' %></td>
      </tr>
      
    </tbody>
  </table>
  
</div>

<div class="col-sm-6">

  <table id="table-grid">
    <tbody id="grid">
      <% (0..10).each do |row| %>
        <tr class="<%= row %>">
        <% if row > 0 %>
         <td class="col-xs-1 battleship-grid"><%= row %></td>
        <% else %>
          <td class="col-xs-1 battleship-grid"></td>
        <% end %>
        <% ('A'..'J').each do |col| %>
          <% if row == 0 %>
            <td class="col-xs-1 battleship-grid"><%= col %></td>  
          <% else %>  
            <td class="col-xs-1 battleship-grid" data-xCoord="<%= col %>" data-yCoord="<%= row %>"></td>
          <% end %>   
        <% end %>  
        </tr>
      <% end %> 
        
    </tbody>
  </table>

</div>
